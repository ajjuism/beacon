---
const stats = [
  { number: '100K+', label: 'Developers' },
  { number: '1M+', label: 'Downloads' },
  { number: '5K+', label: 'GitHub Stars' },
  { number: '99.9%', label: 'Uptime' },
];
---

<div class="bg-white py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-4">
      {stats.map(({ number, label }) => (
        <div class="mx-auto flex max-w-xs flex-col gap-y-4">
          <dt class="text-base leading-7 text-gray-600">{label}</dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900 sm:text-5xl">{number}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>