---
import MobileMenu from './MobileMenu';

const navItems = [
  { label: 'Docs', href: '/docs' },
  { label: 'API', href: '/api' },
  { label: 'Blog', href: '/blog' },
  { label: 'GitHub', href: 'https://github.com' },
];
---

<header class="bg-white border-b border-gray-200 fixed w-full z-40">
  <nav class="px-4 sm:px-6">
    <div class="flex justify-between h-16">
      <div class="flex items-center space-x-3">
        <MobileMenu client:load items={navItems} />
        <a href="/" class="flex items-center space-x-2">
          <svg class="h-8 w-8 text-indigo-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
          </svg>
          <span class="text-xl font-bold text-gray-900">Beacon</span>
        </a>
      </div>

      {/* Desktop Navigation */}
      <div class="hidden md:flex md:items-center md:space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 hover:text-indigo-600 border-b-2 border-transparent hover:border-indigo-600 transition-colors duration-150"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>