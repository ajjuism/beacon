---
import Sidebar from '../components/Sidebar.astro';
import Header from '../components/Header.astro';
import TableOfContents from '../components/TableOfContents';
import SidebarOverlay from '../components/SidebarOverlay';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Beacon Docs</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50">
    <Header />
    <SidebarOverlay client:load />
    <div class="pt-16 lg:flex">
      <Sidebar />
      <div class="flex-1 lg:ml-72">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="flex flex-col lg:flex-row lg:gap-12">
            <article class="prose prose-slate max-w-none lg:max-w-4xl prose-headings:text-gray-900 prose-a:text-indigo-600">
              <slot />
            </article>
            <div class="hidden xl:block w-64 flex-shrink-0">
              <TableOfContents client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>