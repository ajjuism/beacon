---
import Layout from '../layouts/Layout.astro';
import FeaturesGrid from '../components/features/FeaturesGrid.astro';
import Stats from '../components/home/Stats.astro';
---

<Layout title="Open Source Documentation Platform">
  <main>
    <!-- Hero Section -->
    <div class="relative isolate bg-gradient-to-b from-white to-gray-50">
      <div class="max-w-7xl mx-auto px-6 py-24 sm:py-32 lg:px-8">
        <div class="text-center">
          <span class="inline-flex items-center gap-2.5 px-5 py-2.5 rounded-full font-semibold text-lg bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-700 ring-2 ring-indigo-100 shadow-sm mb-10 hover:shadow-md transition-shadow duration-200">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            Beacon
          </span>
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
            Open Source
            <span class="relative whitespace-nowrap text-indigo-600">
              <svg
                aria-hidden="true"
                viewBox="0 0 418 42"
                class="absolute left-0 top-2/3 h-[0.58em] w-full fill-indigo-300/70"
                preserveAspectRatio="none"
              >
                <path d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z"></path>
              </svg>
              <span class="relative">Documentation Platform</span>
            </span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto">
            Light the way to better documentation. An open-source platform built with Astro, React, and Tailwind CSS.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="/docs"
              class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >
              Get started
            </a>
            <a href="https://github.com" class="text-sm font-semibold leading-6 text-gray-900">
              Star on GitHub <span aria-hidden="true">→</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Tech Stack Section -->
    <div class="py-24 bg-white sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-base font-semibold leading-7 text-indigo-600">Built with modern tools</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Powered by the best in open source
          </p>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Our stack combines the best of modern web development tools to deliver a fantastic developer and user experience.
          </p>
        </div>
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4 text-center">
          <div>
            <div class="text-indigo-600 text-4xl font-bold mb-2">Astro</div>
            <p class="text-gray-600">Static Site Generation</p>
          </div>
          <div>
            <div class="text-indigo-600 text-4xl font-bold mb-2">React</div>
            <p class="text-gray-600">Interactive Components</p>
          </div>
          <div>
            <div class="text-indigo-600 text-4xl font-bold mb-2">Tailwind</div>
            <p class="text-gray-600">Styling & Design</p>
          </div>
          <div>
            <div class="text-indigo-600 text-4xl font-bold mb-2">MDX</div>
            <p class="text-gray-600">Content Management</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="py-24 bg-gray-50 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-base font-semibold leading-7 text-indigo-600">Open Source Features</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Everything you need to build great docs
          </p>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Free and open source, with all the features you need to create beautiful documentation.
          </p>
        </div>
        <FeaturesGrid />
      </div>
    </div>

    <!-- Stats Section -->
    <Stats />

    <!-- CTA Section -->
    <div class="bg-indigo-50">
      <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Join our open source community
          </h2>
          <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600">
            Get involved by contributing, reporting issues, or starring our repository on GitHub.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a
              href="/docs"
              class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >
              Start building
            </a>
            <a href="https://github.com" class="text-sm font-semibold leading-6 text-gray-900">
              View on GitHub <span aria-hidden="true">→</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>